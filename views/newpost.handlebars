{{!-- Create a new post --}}
<section class="card newpost-card">
  <div class="row mb-2 card-header">
    <div class="col-md-6">
      <h3>Create a New Post</h3>
    </div>
  </div>

  <div class="row mb-4 card-body">
    <div class="col-md-12">
      <form class="form new-post-form">
        <div class="form-group">
          <label for="post-title">Title</label>
          <input class="form-input" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
          <label for="post-desc">Content</label>
          <textarea class="form-input" id="post-text" name="post-text"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</section>

<script src="../js/newpost.js"></script>